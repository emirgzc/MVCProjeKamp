@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string color = ""; string status = "";}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">

    <section class="content">
        <br />
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <div class="card-tools">
                    <a href="/Heading/AddHeading/" class="btn btn-success">Ekle</a>
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">#</th>
                            <th style="width: 20%">Başlık Adı</th>
                            <th style="width: 15%">Oluşturan Yazar</th>
                            <th style="width: 15%" class="text-center">Durumu</th>
                            <th style="width: 15%" class="text-center">Kategori</th>
                            <th style="width: 20%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            if (x.CategoryID == 1)
                            {
                                color = "success";
                            }
                            if (x.CategoryID == 2)
                            {
                                color = "info";
                            }
                            if (x.CategoryID == 3)
                            {
                                color = "primary";
                            }
                            if (x.CategoryID == 4)
                            {
                                color = "secondary";
                            }
                            if (x.CategoryID == 5)
                            {
                                color = "warning";
                            }
                            if (x.CategoryID == 6)
                            {
                                color = "danger";
                            }
                            if (x.CategoryID == 7)
                            {
                                color = "dark";
                            }
                            if (x.CategoryID == 8)
                            {
                                color = "success";
                            }
                            if (x.CategoryID == 9)
                            {
                                color = "info";
                            }
                            if (x.CategoryID == 10)
                            {
                                color = "primary";
                            }
                            if (x.CategoryID == 11)
                            {
                                color = "secondary";
                            }
                            if (x.CategoryID == 12)
                            {
                                color = "warning";
                            }
                            if (x.CategoryID == 13)
                            {
                                color = "danger";
                            }
                            if (x.CategoryID == 14)
                            {
                                color = "dark";
                            }
                            <tr>
                                <td>#</td>
                                <td>
                                    <a>@x.HeadingName</a>
                                    <br />
                                    <small>@(((DateTime)x.HeadingDate).ToString("dd-MMMMM-yyyy"))</small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="@x.Writer.WriterImage">
                                        </li>
                                        <li class="list-inline-item">
                                            <span>@x.Writer.WriterName @x.Writer.WriterSurName</span>
                                        </li>
                                    </ul>
                                </td>
                                @if (x.HeadingStatus == true)
                                {
                                    status = "success";
                                }
                                @if (x.HeadingStatus == false)
                                {
                                    status = "danger";
                                }
                                <td class="project-state" style="border-right: 1px solid #696363; border-left: 1px solid #696363">
                                    @if (x.HeadingStatus == true)
                                    {
                                        <span class="badge badge-@status">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-@status">Pasif</span>
                                    }
                                </td>
                                <td class="project-state" style="border-right: 1px solid #797272;">
                                    <span class="badge badge-@color">@x.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@x.HeadingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Heading/EditHeading/@x.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    @if (x.HeadingStatus == true)
                                    {
                                        <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading/@x.HeadingID">
                                            <i class="fas fa-trash">
                                            </i>
                                            Pasif Yap
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-danger btn-sm" href="/Heading/DeleteHeading2/@x.HeadingID">
                                            <i class="fas fa-trash">
                                            </i>
                                            Aktif Yap
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>

